Vagrant.configure("2") do |config|

    config.vm.provider :virtualbox do |v|
        v.name = "dev"
        v.customize [
            "modifyvm", :id,
            "--name", "dev",
            "--memory", 512,
            "--natdnshostresolver1", "on",
            "--cpus", 1,
        ]
    end

    config.vm.box_url = "https://cloud-images.ubuntu.com/vagrant/trusty/current/trusty-server-cloudimg-amd64-vagrant-disk1.box"
    config.vm.box = "ubuntu/trusty64"
    
    config.vm.network :private_network, ip: "10.10.10.10"
    config.vm.network :forwarded_port, guest: 22, host: 2220, id: 'ssh'
    config.ssh.forward_agent = true

    config.vm.provision "file", source: "../common/keys/faemino_dev.pub", destination: "/home/vagrant/.ssh/faemino_dev.pub"
    config.vm.provision "shell", inline: "/bin/cat /home/vagrant/.ssh/faemino_dev.pub >> /home/vagrant/.ssh/authorized_keys"
end
